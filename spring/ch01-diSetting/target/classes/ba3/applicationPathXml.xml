<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="student" class="com.study.ba3.Student">
        <constructor-arg name="age" value="22"></constructor-arg>
        <constructor-arg name="name" value="lisi"></constructor-arg>
      <constructor-arg name="school" ref="school"></constructor-arg>
    </bean>
    <bean id="school" class="com.study.ba3.School">
        <constructor-arg name="name" value="qinghua"></constructor-arg>
        <constructor-arg name="palace" value="beijing"></constructor-arg>
    </bean>

</beans>